---
import "../styles/global.scss";
import Head from "./head.astro";
import Header from "./header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={title} />
  </head>
  <body>
    <Header />
    <main class="grid-padding">
      <slot />
    </main>
  </body>
</html>

<style lang="scss">
  body {
    display: flex;
    flex-direction: column;
    font-family: sans-serif;
  }

  main {
    flex: 1;
    padding-block: 2rem;
  }
</style>
