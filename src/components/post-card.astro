---
import { randomUUID } from "node:crypto";

interface Props {
  title: string;
  description: string;
  date: Date;
  url: string;
}

const { title, description, date, url } = Astro.props;
const titleId = `post-title-${randomUUID()}`;
---

<article class="post-card">
  <a href={url} class="card-link" aria-labelledby={titleId}>
    <header>
      <time datetime={date.toISOString()}>
        {
          new Intl.DateTimeFormat("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          }).format(date)
        }
      </time>
      <h3 id={titleId}>{title}</h3>
    </header>
    <p>{description}</p>
    <span class="read-more" aria-hidden="true">
      Read more
      <svg
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="M5 12h14"></path>
        <path d="m12 5 7 7-7 7"></path>
      </svg>
    </span>
  </a>
</article>

<style lang="scss">
  .post-card {
    background-color: var(--color-surface-primary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    height: 100%;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px var(--color-shadow);
    }
  }

  .card-link {
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    color: inherit;
    text-decoration: none;

    &:hover {
      color: inherit;

      h3 {
        color: var(--color-accent-primary);
      }

      .read-more {
        color: var(--color-accent-secondary);

        svg {
          transform: translateX(4px);
        }
      }
    }
  }

  header {
    margin-bottom: 1rem;

    time {
      font-size: 0.875rem;
      color: var(--color-fg-tertiary);
    }

    h3 {
      font-size: 1.25rem;
      line-height: 1.4;
      margin-block: 0.5rem;
      color: var(--color-fg-primary);
      transition: color 0.2s ease;
    }
  }

  p {
    color: var(--color-fg-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    flex: 1;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent-primary);
    font-weight: 500;
    transition: color 0.2s ease;

    svg {
      transition: transform 0.2s ease;
    }
  }
</style>
